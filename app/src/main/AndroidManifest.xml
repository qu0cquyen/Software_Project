<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.emergensui.automotive_ui">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".embedded_navigation"></activity>
        <activity android:name=".MapActivity" />
        <activity
            android:name=".patient_information"
            android:label="@string/patientInfo_TitleScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".doc_nur_contacts"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".patient_list"
            android:label="@string/patientList_TitleScreen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".paramedic_screen"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".profile2_screen"
            android:configChanges="locale|orientation|keyboardHidden"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name=".splash_screen"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppFullScreenTheme" />
    </application>

</manifest>